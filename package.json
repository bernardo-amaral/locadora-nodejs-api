{
  "name": "bernardo-node-api",
  "version": "1.0.0",
  "description": "",
  "main": "./app/server.js",
  "engines": {
    "yarn": "^1.3.2"
  },
  "scripts": {
    "test": "./node_modules/.bin/mocha ./test/*.test.js --reporter spec --exit",
    "start": "node ./app/server.js",
    "lint": "./node_modules/.bin/eslint app/*js",
    "migrate": "./node_modules/.bin/knex migrate:rollback && ./node_modules/.bin/knex migrate:latest",
    "seed": "./node_modules/.bin/knex seed:run",
    "knex": "./node_modules/.bin/knex",
    "build": "npm run lint && npm run migrate && npm run seed",
    "generate-lcov": "nyc report --reporter=text-lcov > lcov.info",
    "coveralls-coverage": "coveralls < lcov.info",
    "codeclimate-coverage": "codeclimate-test-reporter < lcov.info",
    "coverage": "nyc npm test && npm run generate-lcov && npm run coveralls-coverage && npm run codeclimate-coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bernardo-amaral/nodejs-api-jwt.git"
  },
  "author": "Bernardo Amaral",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bernardo-amaral/nodejs-api-jwt/issues"
  },
  "homepage": "https://github.com/bernardo-amaral/nodejs-api-jwt#readme",
  "dependencies": {
    "axios": "^0.19.0",
    "body-parser": "^1.19.0",
    "cheerio": "^1.0.0-rc.3",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "express-jwt": "^5.3.1",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.19.3",
    "mercadolibre": "^0.0.13",
    "node-cron": "^2.0.3",
    "pg": "^7.11.0",
    "promise": "^8.0.3"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "eslint": "^6.3.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.17.3",
    "mocha": "^6.1.4",
    "supertest": "^4.0.2",
    "nyc": "^13.3.0"
  },
  "nodemonConfig": {
    "ignore": [
      "test/*",
      "docs/*",
      "migrations/*"
    ],
    "delay": "2500"
  }
}
